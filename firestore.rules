
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Нэвтэрсэн эсэхийг шалгах функц
    function isSignedIn() {
      return request.auth != null;
    }

    // Эзэмшигч мөн эсэхийг шалгах функц
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ========== Хэрэглэгчийн мэдээлэл ==========
    match /complimentOwners/{userId} {
      allow read: if true; // Public needs to read theme/name
      allow write: if request.auth != null && request.auth.uid == userId;
      
      match /compliments/{complimentId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create: if true; // Public can create compliments
        allow update: if request.auth != null && request.auth.uid == userId; // Only owner can update (e.g. mark read)
      }

      match /polls/{pollId} {
        allow read: if true; // EXPLICIT PUBLIC READ
        allow write: if request.auth != null && request.auth.uid == userId;
        
        match /responses/{responseId} {
           allow read: if request.auth != null && request.auth.uid == userId;
           allow create: if true; // Public can vote
        }
      }

      // Fallback for other subcollections
      match /{allSubcollections=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }



    // ========== Богино холбоос ==========
    match /shortLinks/{shortId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // ========== Нэргүй постууд ==========
    match /confessions/{confessionId} {
      allow read: if true;
      // Write operations should be done via Server Actions for safety
      allow create, update, delete: if false; 
    }

    // ========== Төлбөрийн нэхэмжлэхүүд ==========
    match /invoices/{invoiceId} {
      allow read: if request.auth != null && (resource == null || resource.data.ownerId == request.auth.uid);
      allow create: if request.auth != null;
      // Зөвхөн серверээс шинэчилнэ (Admin SDK/Server Action)
      allow update: if false;
      allow delete: if false;
    }
  }
}
